      "tasks": [{
        "type": "exec",
        "run_if": "passed",
        "on_cancel": null,
        "command": "echo",
        "arguments": [
          "$USER"
        ],
        "working_directory": "ops/environment"
      }, {
        "type": "fetch",
        "run_if": "passed",
        "pipeline": "Application",
        "stage": "Package",
        "job": "Package",
        "is_source_a_file": false,
        "source": "dist",
        "destination": "ops/environment/application"
