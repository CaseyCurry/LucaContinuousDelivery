      "timeout": 0,
      "tasks": [{
        "type": "exec",
        "run_if": "passed",
        "on_cancel": null,
        "command": "/bin/bash",
        "arguments": [
          "-c",
          "source ./scripts/test/containers/commit.sh"
        ],
        "working_directory": "ops/environment"
      }]
    }]
  }, {
    "name": "DeployRelease",
    "fetch_materials": false,
    "never_cleanup_artifacts": false,
    "clean_working_directory": false,
    "environment_variables": [{
      "name": "PATH",
      "value": "/Users/caseycurry/Library/Python/3.6/bin:/usr/local/bin:/usr/bin:/bin"
    }],
    "jobs": [{
      "name": "Deploy",
      "environment_variables": [],
      "tabs": [],
      "resources": [],
      "artifacts": [],
      "properties": [],
      "run_instance_count": null,
      "timeout": 0,
      "tasks": [{
        "type": "exec",
        "run_if": "passed",
        "on_cancel": null,
        "command": "/bin/bash",
        "arguments": [
          "-c",
          "source ./scripts/deploy.sh containers/latest"
        ],
        "working_directory": "ops/environment"
      }, {
        "type": "exec",
        "run_if": "passed",
        "on_cancel": null,
        "command": "curl",
        "arguments": [
          "-XPUT",
          "http://127.0.0.1:9201/releases",
          "-H",
          "Content-Type: application/json",
          "-d",
          "{\"app\":\"Luca\",\"version\":\"1.2.3\"}"
        ],
        "working_directory": null
      }]
    }]
  }]
